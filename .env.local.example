# Hawaii Home Central Environment Variables
# Copy this file to .env.local and fill in the values

# Optional: Tally.so form URL for early access signup
# If set, the early access form will embed Tally instead of using the native form
# Example: https://tally.so/embed/w2jM7X
NEXT_PUBLIC_TALLY_FORM_URL=

# Optional: Override contact email (defaults to hello@hawaiihomecentral.com)
# NEXT_PUBLIC_CONTACT_EMAIL=hello@hawaiihomecentral.com

# Neon Postgres — get from https://neon.tech
DATABASE_URL=

# Auth.js — generate secret with: openssl rand -base64 32
AUTH_SECRET=

# Google OAuth — get from Google Cloud Console → APIs & Services → Credentials
AUTH_GOOGLE_ID=
AUTH_GOOGLE_SECRET=

# Apple OAuth (optional, add later if needed)
# AUTH_APPLE_ID=
# AUTH_APPLE_SECRET=

# Optional: Allow image proxy to fetch from localhost (dev only)
# Set to true only on your own machine to proxy localhost images during development.
# ALLOW_IMAGE_PROXY_LOCALHOST=true
